#include <complex>
#include <iostream>
#include <stdlib.h>
#include <string.h>
#define sc struct company
using namespace std;
// TIP To <b>Run</b> code, press <shortcut actionId="Run"/> or click the <icon src="AllIcons.Actions.Execute"/> icon in the gutter.
struct company {
    char name[20];
    int payments;
    struct company *next;
};

sc* add(sc *c) {
    if (c==NULL) {
        c = (sc*)malloc(sizeof(sc));
        printf("Enter name:");
        scanf("%s",&(c->name));
        printf("Enter payments:");
        scanf("%d",&(c->payments));
        c->next = NULL;
        return c;
    }

    c->next = add(c->next);
    return c;

}

void show(sc *c) {
    while (c != NULL) {

        printf("Name:%s\n", c->name);
        printf("Payments: %d\n", c->payments);
        printf("--------------------\n");
        c = c->next;
    }
    printf("\n");
}
int main() {
   int a;
   sc *head = NULL;
    do {
        printf(" 1) Add\n "
               "2) Show\n "
               "pleas, enter anumber\n");
        scanf("%d",&a);
        if(a==1)
            head = add(head);
        else if (a==2)
            show(head) ;
    }while (a);
    return 0;
}
